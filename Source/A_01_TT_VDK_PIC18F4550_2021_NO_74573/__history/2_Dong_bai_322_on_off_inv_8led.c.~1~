#include <tv_kit_vdk_pic_all.c>     //<tv_kit_vdk_18f4550_all.c>
void main()                                                        
{                                               
   set_up_port();                   //set_up_port_ic_chot();                                                                
   while(true)                                        
   {     
      while (input(on));
      xuat_32led_don_4byte(0,0,0,0xff);
      while (input(off));
      xuat_32led_don_4byte(0,0,0,0);                                    
   }      
}  

